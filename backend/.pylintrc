# Pylint Configuration for GlucoLens Backend
# Static code analysis to find bugs, enforce coding standards

[MASTER]
# Python version
py-version=3.11

# Ignore paths
ignore=CVS,migrations,venv,.venv,tests

# Use multiple processes to speed up Pylint
jobs=4

# Pickle collected data for later comparisons
persistent=yes

# Allow loading of arbitrary C extensions
unsafe-load-any-extension=no

[MESSAGES CONTROL]
# Disable specific warnings that are too strict or not applicable
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name (allow single letter variables)
    R0903,  # too-few-public-methods (Pydantic models)
    R0913,  # too-many-arguments (common in API endpoints)
    W0212,  # protected-access (needed for SQLAlchemy)
    W0511,  # fixme (allow TODO comments)
    E1101,  # no-member (false positives with SQLAlchemy)
    R0801,  # duplicate-code (similar API patterns)
    C0415,  # import-outside-toplevel (needed for circular imports)

[REPORTS]
# Output format
output-format=colorized

# Include message's id in output
msg-template={path}:{line}:{column}: [{msg_id}({symbol}), {obj}] {msg}

# Reports
reports=no
score=yes

[BASIC]
# Good variable names
good-names=i,j,k,ex,Run,_,id,db,pk,app

# Bad variable names
bad-names=foo,bar,baz,toto,tutu,tata

# Regular expression for acceptable names
variable-rgx=[a-z_][a-z0-9_]{0,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
attr-rgx=[a-z_][a-z0-9_]{0,30}$
argument-rgx=[a-z_][a-z0-9_]{0,30}$
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{1,30}|(__.*__))$
class-rgx=[A-Z_][a-zA-Z0-9]+$
function-rgx=[a-z_][a-z0-9_]{1,40}$
method-rgx=[a-z_][a-z0-9_]{1,40}$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$

[FORMAT]
# Maximum line length
max-line-length=120

# Allow the body of an if to be on the same line as the test
single-line-if-stmt=no

# Maximum number of lines in a module
max-module-lines=1000

[DESIGN]
# Maximum number of arguments for function / method
max-args=8

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of statements in function / method body
max-statements=60

# Minimum number of public methods for a class
min-public-methods=0

[IMPORTS]
# Allow wildcard imports from typing
allow-wildcard-with-all=yes

[EXCEPTIONS]
# Exceptions that should be caught
overgeneral-exceptions=
    builtins.Exception
