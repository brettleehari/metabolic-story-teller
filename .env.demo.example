# GlucoLens Demo Environment Variables
# Copy this file to .env.demo and fill in your values

# ===============================
# AWS Configuration
# ===============================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# ===============================
# Database Configuration (Aurora Serverless v2)
# ===============================
AWS_DB_ENDPOINT=your-cluster.cluster-xxxxx.us-east-1.rds.amazonaws.com
AWS_DB_NAME=glucolens
AWS_DB_USERNAME=glucolens_user
AWS_DB_PASSWORD=your-secure-password

# Database URL (constructed from above)
DATABASE_URL=postgresql+asyncpg://${AWS_DB_USERNAME}:${AWS_DB_PASSWORD}@${AWS_DB_ENDPOINT}:5432/${AWS_DB_NAME}

# ===============================
# S3 & CloudFront Configuration
# ===============================
AWS_S3_BUCKET=glucolens-demo-frontend
AWS_CLOUDFRONT_DISTRIBUTION_ID=E1234567890ABC
AWS_CLOUDFRONT_DOMAIN=demo.glucolens.com

# ===============================
# API Gateway Configuration
# ===============================
# This will be auto-generated after deployment
# Get it with: aws cloudformation describe-stacks --stack-name glucolens-demo
AWS_API_GATEWAY_URL=https://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com/Prod

# ===============================
# Frontend Configuration
# ===============================
VITE_DEMO_MODE=true
VITE_DEMO_API_URL=${AWS_API_GATEWAY_URL}

# ===============================
# Stack Configuration
# ===============================
STACK_NAME=glucolens-demo
ENVIRONMENT=demo

# ===============================
# Optional: Monitoring & Alerts
# ===============================
# SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:glucolens-alerts
# ALERT_EMAIL=alerts@yourdomain.com

# ===============================
# GitHub Secrets (for CI/CD)
# ===============================
